@model List<Book>
@{
    ViewData["Title"] = "Index";
}



<div class="container">
    <div class="row">
        <h2 class="text-primary">Book List</h2>
        <partial name="_Notification" />
    </div>
    <div class="d-grid gap-2">
        <a asp-area="Admin" asp-controller="Book" asp-action="Upsert" class="btn btn-primary" type="button"> Add New Book</a>

    </div>

    <div class="row">

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Title</th>
                    <th scope="col">Author</th>
                    <th scope="col">Price</th>
                    <th scope="col">Date Published</th>
                    <th scope="col">Cateogry</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr class="justify-content-evenly">

                        <td>@book.Id</td>
                        <td>@book.Title</td>
                        <td>@book.Author</td>
                        <td>@book.Price.ToString("c")</td>
                        <td>@book.DatePublished</td>
                        <td>@book.Category.Title</td>
                        <td class="text-end">
                            <a asp-area="Admin" asp-controller="Book" asp-action="Delete" asp-route-id="@book.Id" class="btn btn-primary">Detete</a>
                            <a asp-area="Admin" asp-controller="Book" asp-action="Upsert" asp-route-id="@book.Id" class="btn btn-primary">Edit</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

